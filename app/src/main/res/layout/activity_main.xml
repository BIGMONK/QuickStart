<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:radiobutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context="com.laiyifen.MainActivity">


    <com.laiyifen.library.view.refresh.SmartRefreshLayout
        android:id="@+id/refreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="test" />
    </com.laiyifen.library.view.refresh.SmartRefreshLayout>

    <RadioGroup
        android:id="@+id/bottom_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <com.laiyifen.library.view.tipview.TipRadioButton
            android:id="@+id/radiobutton_bg_message"
            style="@style/radiobutton_style"
            android:checked="true"
            android:text="首页"
            radiobutton:drawableTop="@drawable/select_home"
            radiobutton:tipText="33" />

        <com.laiyifen.library.view.tipview.TipRadioButton
            android:id="@+id/radiobutton_bg_contact"
            style="@style/radiobutton_style"
            android:text="分类"
            radiobutton:drawableTop="@drawable/select_classification"
            radiobutton:tipText="334" />

        <com.laiyifen.library.view.tipview.TipRadioButton
            android:id="@+id/radiobutton_bg_work"
            style="@style/radiobutton_style"
            android:text="购物车"
            radiobutton:drawableTop="@drawable/select_buycart" />

        <com.laiyifen.library.view.tipview.TipRadioButton
            android:id="@+id/radiobutton_bg_mine"
            style="@style/radiobutton_style"
            android:text="个人中心"
            radiobutton:drawableTop="@drawable/select_my"
            radiobutton:isTip="true" />
    </RadioGroup>

</RelativeLayout>
