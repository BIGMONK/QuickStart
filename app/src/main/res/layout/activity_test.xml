<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:radiobutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.laiyifen.library.view.refresh.SmartRefreshLayout
        android:id="@+id/refreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RadioGroup
            android:id="@+id/bottom_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <com.laiyifen.library.view.tipview.TipRadioButton
                android:id="@+id/radiobutton_bg_message"
                style="@style/radiobutton_style"
                android:checked="true"
                android:text="首页"
                radiobutton:tipText="33"
                radiobutton:drawableTop="@drawable/select_home" />

            <com.laiyifen.library.view.tipview.TipRadioButton
                android:id="@+id/radiobutton_bg_contact"
                style="@style/radiobutton_style"
                android:text="分类"
                radiobutton:tipText="334"
                radiobutton:drawableTop="@drawable/select_classification" />

            <com.laiyifen.library.view.tipview.TipRadioButton
                android:id="@+id/radiobutton_bg_work"
                style="@style/radiobutton_style"
                android:text="购物车"
                radiobutton:drawableTop="@drawable/select_buycart" />

            <com.laiyifen.library.view.tipview.TipRadioButton
                android:id="@+id/radiobutton_bg_mine"
                style="@style/radiobutton_style"
                android:text="个人中心"
                radiobutton:isTip="true"
                radiobutton:drawableTop="@drawable/select_my" />
        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="test" />
    </com.laiyifen.library.view.refresh.SmartRefreshLayout>

</LinearLayout>